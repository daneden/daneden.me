{
  "name": "daneden.me",
  "description": "The website and blog of Daniel Eden, a designer writing and thinking about design systems",
  "version": "3.0.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,mdx,md,ts,tsx,jsx}": [
      "prettier --write"
    ]
  },
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "build:og-images": "node src/build-helpers/generate-og-images.mjs",
    "build:feed": "node src/build-helpers/generate-rss.mjs",
    "prebuild": "yarn build:og-images && yarn build:feed",
    "postbuild": "next-sitemap",
    "dev": "next dev",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx,mdx}\"",
    "precommit": "lint-staged",
    "start": "next start",
    "prepare": "npx husky install"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/runtime": "^1.6.22",
    "@ngsctt/remark-smartypants": "^0.2.0",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "canvas": "2.6.1",
    "file-loader": "^6.2.0",
    "fs-readdir-recursive": "^1.1.0",
    "gray-matter": "^4.0.3",
    "mdx-prism": "^0.3.4",
    "next": "^12.0.7",
    "next-mdx-remote": "^3.0.8",
    "next-sitemap": "^1.6.203",
    "prismjs": "^1.25.0",
    "react": "^17.0.2",
    "react-codepen-embed": "^1.0.2",
    "react-dom": "^17.0.2",
    "rehype": "^12.0.0",
    "rehype-katex": "^5.0.0",
    "remark-abbr": "^1.4.1",
    "remark-math": "5.1.1",
    "remark-slug": "^7.0.1",
    "remark-toc": "^8.0.1",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@now/node": "^1.8.5",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0.4",
    "eslint-plugin-mdx": "^1.16.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "rss": "^1.2.2"
  }
}
