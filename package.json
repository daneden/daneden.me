{
  "name": "daneden.me",
  "description": "The website and blog of Daniel Eden, a designer writing and thinking about design systems",
  "version": "3.0.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,mdx,md,ts,tsx,jsx}": [
      "prettier --write"
    ]
  },
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "build:og-images": "node src/build-helpers/generate-og-images.mjs",
    "build:feed": "node src/build-helpers/generate-rss.mjs",
    "social:twitterbanner": "node src/build-helpers/twitter-banner.mjs",
    "prebuild": "yarn build:og-images && yarn build:feed",
    "postbuild": "next-sitemap && yarn social:twitterbanner",
    "dev": "next dev",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx,mdx}\"",
    "precommit": "lint-staged",
    "start": "next start",
    "prepare": "npx husky install"
  },
  "dependencies": {
    "@mdx-js/loader": "^2.1.2",
    "@mdx-js/mdx": "^2.1.2",
    "@mdx-js/runtime": "^1.6.22",
    "@ngsctt/remark-smartypants": "^0.2.0",
    "@resvg/resvg-js": "^2.1.0",
    "@types/react-dom": "^18.0.6",
    "apca-w3": "^0.1.9",
    "babel-loader": "^8.2.5",
    "colord": "^2.9.2",
    "file-loader": "^6.2.0",
    "fs-readdir-recursive": "^1.1.0",
    "gray-matter": "^4.0.3",
    "hastscript": "^7.0.2",
    "mdx-prism": "^0.3.4",
    "next": "^12.2.0",
    "next-mdx-remote": "4.0.3",
    "next-sitemap": "^2.5.28",
    "prismjs": "^1.28.0",
    "react": "^18.2.0",
    "react-codepen-embed": "^1.1.0",
    "react-dom": "^18.2.0",
    "rehype": "^12.0.1",
    "rehype-katex": "^5.0.0",
    "remark-directive": "^2.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "5.1.1",
    "remark-slug": "^7.0.1",
    "remark-toc": "^8.0.1",
    "typescript": "^4.7.4",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@now/node": "^1.8.5",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.14",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.2.0",
    "eslint-plugin-mdx": "^1.17.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rss": "^1.2.2",
    "twitter": "^1.7.1"
  }
}
