{
  "name": "daneden.me",
  "description": "The website and blog of Daniel Eden, a designer writing and thinking about design systems",
  "version": "3.0.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,mdx,md,ts,tsx,jsx}": [
      "prettier --write"
    ]
  },
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "build:og-images": "node src/build-helpers/generate-og-images.js",
    "build:feed": "node src/build-helpers/generate-rss.js",
    "prebuild": "yarn build:og-images && yarn build:feed",
    "postbuild": "next-sitemap",
    "dev": "next dev",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx,md,mdx}\"",
    "precommit": "lint-staged",
    "start": "next start",
    "prepare": "npx husky install"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@mdx-js/mdx": "^1.6.22",
    "@ngsctt/remark-smartypants": "^0.2.0",
    "@types/react-dom": "^17.0.3",
    "babel-loader": "^8.2.2",
    "canvas": "^2.7.0",
    "file-loader": "^6.2.0",
    "fs-readdir-recursive": "^1.1.0",
    "glsl-shader-loader": "^0.1.6",
    "gray-matter": "^4.0.3",
    "mdx-prism": "^0.3.3",
    "next": "^10.2.0",
    "next-mdx-remote": "^3.0.1",
    "next-sitemap": "^1.6.49",
    "prismjs": "^1.23.0",
    "react": "^17.0.2",
    "react-codepen-embed": "^1.0.2",
    "react-dom": "^17.0.2",
    "rehype": "^11.0.0",
    "rehype-katex": "^5.0.0",
    "rehype-slug": "^4.0.1",
    "remark-abbr": "^1.4.1",
    "remark-math": "3.0.1",
    "remark-toc": "^7.2.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@now/node": "^1.8.5",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-daneden": "^1.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-mdx": "^1.13.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rss": "^1.2.2"
  }
}
